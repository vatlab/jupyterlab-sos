{
  "title": "jupyterlab-sos",
  "description": "SoS extension settings.",
  "jupyter.lab.toolbars": {
    "Cell": [
      {
        "name": "kernel_selector"
      }
    ]
  },
  "jupyter.lab.shortcuts": [
    {
      "command": "sos:toggle_output",
      "keys": ["Ctrl Shift O"],
      "selector": ".jp-Notebook.jp-mod-editMode"
    },
    {
      "command": "sos:toggle_kernel",
      "keys": ["Ctrl Shift S"],
      "selector": ".jp-Notebook.jp-mod-editMode"
    },
    {
      "command": "sos:toggle_markdown",
      "keys": ["Ctrl Shift M"],
      "selector": ".jp-Notebook.jp-mod-editMode"
    },
    {
      "command": "notebook:run-in-console",
      "keys": ["Ctrl Shift Enter"],
      "selector": ".jp-Notebook.jp-mod-editMode"
    }
  ],
  "properties": {
    "sos.kernel_codemirror_mode": {
      "title": "CodeMirror mode for SoS kernels",
      "description": "SoS action - codemirror mode map. The mode can be a single string or an object.",
      "default": {
        "python": {
          "name": "python",
          "version": 3
        },
        "python2": {
          "name": "python",
          "version": 2
        },
        "python3": {
          "name": "python",
          "version": 3
        },
        "r": "r",
        "report": "report",
        "pandoc": "markdown",
        "download": "markdown",
        "markdown": "markdown",
        "ruby": "ruby",
        "sas": "sas",
        "bash": "shell",
        "sh": "shell",
        "julia": "julia",
        "run": "shell",
        "javascript": "javascript",
        "typescript": {
          "name": "javascript",
          "typescript": true
        },
        "octave": "octave",
        "matlab": "octave",
        "mllike": "mllike",
        "clike": "clike",
        "html": "htmlembedded",
        "xml": "xml",
        "yaml": "yaml",
        "json": {
          "name": "javascript",
          "jsonMode": true
        },
        "stex": "stex"
      }
    },
    "sos.default_background_colors": {
      "title": "Default background colors for kernels",
      "description": "Default background colors for different kernel types. These can be overridden by notebook-specific settings.",
      "type": "object",
      "additionalProperties": {
        "type": "string",
        "pattern": "^#[0-9A-Fa-f]{6}$|^$"
      },
      "default": {
        "Python": "#FFE5B4",
        "R": "#AED6F1",
        "Julia": "#C8E6C9",
        "Bash": "#FFCDD2",
        "JavaScript": "#FFF3E0"
      }
    },
    "sos.preferred_kernels": {
      "title": "Preferred kernels",
      "description": "List of preferred kernels in order of preference for new cells.",
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": ["Python", "R", "Julia", "Bash"]
    },
    "sos.auto_resume_workflows": {
      "title": "Auto resume workflows",
      "description": "Automatically resume interrupted workflows when opening a notebook.",
      "type": "boolean",
      "default": false
    },
    "sos.metadata_version": {
      "title": "Metadata version",
      "description": "Version of the SoS metadata format to use for new notebooks.",
      "type": "string",
      "default": "1.0"
    }
  },
  "additionalProperties": false,
  "type": "object"
}
